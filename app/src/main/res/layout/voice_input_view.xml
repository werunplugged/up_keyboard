<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    style="?attr/inputViewStyle"
    android:padding="16dp"
    android:minHeight="200dp">

    <!-- Waveform visualization -->
    <helium314.keyboard.voice.ui.WaveformView
        android:id="@+id/waveform_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp" />

    <!-- Status text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/voice_tap_to_speak"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/foreground" />
    
    <!-- Partial transcription text -->
    <TextView
        android:id="@+id/partial_transcription_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/accent"
        android:visibility="gone" />

    <!-- Container for action items (stop button, checkmark, spinner, countdown timer) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:minHeight="80dp"
        android:minWidth="80dp">

        <!-- Stop button -->
        <ImageView
            android:id="@+id/stop_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@string/voice_stop_recording"
            android:focusable="true"
            android:padding="16dp"
            android:src="@drawable/ic_stop"
            android:tint="?android:attr/colorAccent"
            android:visibility="gone" />
        
        <!-- Countdown timer (surrounds the stop button) -->
        <helium314.keyboard.voice.ui.CircularProgressView
            android:id="@+id/countdown_timer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Success checkmark -->
        <ImageView
            android:id="@+id/success_checkmark"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/voice_success"
            android:src="@drawable/ic_check_circle"
            android:tint="@color/success_green"
            android:visibility="gone" />

        <!-- Processing spinner -->
        <ProgressBar
            android:id="@+id/processing_spinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>